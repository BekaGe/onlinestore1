@model onlineStore.Models.ad_view_model
@{
    ViewBag.Title = "ViewAdds";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<link href="/Content/paginition.css" rel="stylesheet" />

<link href="Content/style.css rel="stylesheet" />
<link href="/Content/Cat_Style/font-awesome.css" rel="stylesheet" />
<link href="/Content/Cat_Style/flexslider.css" rel="stylesheet" />
<h2>ViewAdds</h2>

<style>
    td {
        padding: 20px;
    }
</style>

<div class="row" >
    <div class="col-lg-12 col-md-12 banner-wrap">
        <img src="~/Content/img/ecommerce-2140603_960_720.jpg" class="img" style="width:50%;  " />
    </div>
</div>

<div class="col-lg-8 col-md-8 form-control">

    <div>
        <h1 style=" margin-left: 500px">@Model.pro_name <small>AD-ID:@Model.pro_id</small></h1>
    </div>

    <img src="@Url.Content(@Model.pro_image)" style="width: 500px; height: 400px ; border: 1px solid black; margin-left: 500px" />

    <div style="margin-left:500px">
        <h1 >Description: </h1>
        <p>@Model.pro_desc</p>
    </div>

    <table class="w3l-forms-main-61" style="margin-left:500px">


        <tr> <td>Price: </td> <td>@Model.pro_price </td> </tr>
        <tr> <td>Category: </td> <td>@Model.cat_name </td> </tr>
        <tr> <td>Posted by: </td> <td>@Model.u_name <img src="@Url.Content(@Model.u_image)" style="width:40px; height:40px" /> </td> </tr>
        <tr> <td>Contact: </td> <td>@Model.u_contact  </td> </tr>


        <tr >
            <td colspan="2">
                @if (Convert.ToInt32(Session["u_id"]) == Convert.ToInt32(Model.pro_user_id_fk))
                {

                    @Html.ActionLink("Remove", "Add_Delete", new { @class = "btn btn-danger", id = Model.pro_id })}
            </td>
        </tr>

    </table>

